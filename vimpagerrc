set nocompatible

let &rtp.=','.expand('~/.vim/addons/vice')
call vice#Initialize({
    \ 'addons': [
        \ 'github:zeekay/vice-colorful',
        \ 'github:zeekay/vice-standard-issue',
    \ ]
\ })

call vice#ForceActivateAddon('github:zeekay/AnsiEsc.vim')

let vimpager_disable_x11 = 1
let vimpager_scrolloff = 0
let loaded_matchparen = 1

set laststatus=0
set nohls
set nolazyredraw
set ttyfast

nnoremap ; :
vnoremap ; :
inoremap <Esc> <Esc>`^
map <leader>q :q<cr>
nnoremap J <c-d>
nnoremap K <c-u>
vnoremap J <c-d>
vnoremap K <c-u>
nnoremap Q ZQ
inoremap <c-u> <c-o>dd
map <cr> <cr>
map <c-d> <c-d>
map <c-u> <c-u>
map j j
map k k
map h h
map l l
map g g
map gg gg
map A $
map w w
map W W
map b b
map B B
map <c-f> <c-f>
map <c-b> <c-b>
map { {
map / /
map ? ?
map } }
map y y
map z z
vmap G G
map n n
map N N

func! s:Escape()
    " Use AnsiEsc for highlighting if ft is not detected.
    if &ft == ''
        " Initialize highlighting
        AnsiEsc
        " Change default for ansiWhite
        hi ansiWhite ctermfg=245
    endif
endf

func! s:JumpToFirstDiff()
    " Jump to top
    normal gg

    if &ft == 'diff'
        " jump to first difference
        normal ]]
        echo
    endif
endf

au BufReadPost * call s:Escape()
au VimEnter * call s:JumpToFirstDiff()

color hybrid
hi Normal ctermbg=235

" vim:set filetype=vim:
